# Database Configuration
# Uses SQLite. The file is located inside the docker container at /app/database/
DATABASE_URL="file:/app/database/prod.db"

# Security Secrets
# Generate random strings for these
JWT_SECRET="replace_with_secure_random_string"

# Environment
NODE_ENV="production"
PORT=3011

# Google OAuth 2.0 Credentials
# Obtain these from Google Cloud Console
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# OAuth Redirect URIs
# Must match Google Console exactly
GOOGLE_REDIRECT_MAIN_URI="https://localhost:4430/api/google/callback"
GOOGLE_REDIRECT_PLAYER2_URI="https://localhost:4430/api/google/callback/player2"
GOOGLE_REDIRECT_TOURNAMENT_URI="https://localhost:4430/api/google/callback/tournament"
